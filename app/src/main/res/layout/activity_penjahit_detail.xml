<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PenjahitDetail">

    <ImageView
        android:id="@+id/detailMitraimageView"
        android:layout_width="130dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/detailMitraNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailMitraimageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:text="Nama Penjahit"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/detailMitraJam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailMitraNama"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:text="Jam Oprasional"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/detailMitraAlamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailMitraJam"
        android:layout_centerInParent="true"
        android:layout_marginTop="0dp"
        android:text="Alamat"
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycle_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detailMitraAlamat"
        android:scrollbars="vertical">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/buatbaru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recycle_menu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Buat Baru" />

    <Button
        android:id="@+id/vermak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buatbaru"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:text="Vermak" />
</RelativeLayout>